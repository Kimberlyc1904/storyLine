<h1>Diary</h1>

<div class="diary-entry-form">
  <h2>Create Diary Entry</h2>
  <form action="/api/diary" method="POST">
    <input type="text" name="title" placeholder="Title" required>
    <textarea name="content" placeholder="Content" required></textarea>
    {{!-- <button id=onclick="generatePrompt()">Click Me for Prompt</button> --}}
    <button id="generatePrompt" class="btn">Generate Prompt</button>
    <div class="promptArea"></div>
    <button type="submit">Save Entry</button>
  </form>
</div>

<div class="diary-entries">
  <h2>Previous Diary Entries</h2>
  {{#each diaryEntries}}
  {{> diaryCard this}}
  {{/each}}
  </form>
</div>

  <button type="delete">Delete Entry</button>

<script src="/js/prompt.js"></script>